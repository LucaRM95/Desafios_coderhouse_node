<main class="container">
  <form id="login-form" action="/auth/login" method="POST">
    <header>
      <h1>Login</h1>
    </header>
    {{#if message}}
      <p style="color: crimson;">{{message}}</p>
    {{/if}}
    <input id="email-input" type="email" name="email" placeholder="Correo" required />
    <input id="password-input" type="password" name="password" placeholder="Contraseña" required />
    <footer>
      <input type="submit" value="Enviar">
      <a href="/auth/github" role="button">Entrar con Github</a>
      <a href="http://localhost:8080/register">¿No tienes cuenta? Registrate</a>
    </footer>
  </form>
</main>